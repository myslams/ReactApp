{
  "name": "judo-heroes",
  "version": "1.0.0",
  "description": "Simple application to showcase how to achieve universal rendering and routing with React and Express.",
  "main": "src/server.js",
  "repository": "git@github.com:lmammino/judo-heroes.git",
  "scripts": {
    "start": "cross-env NODE_ENV=dev node_modules/.bin/babel-node --presets react,es2015 src/server.js",
    "start-dev": "npm run start-dev-hmr",
    "start-dev-single-page": "node_modules/.bin/http-server src/static",
    "start-dev-hmr": "node_modules/.bin/webpack-dev-server --progress --inline --hot --open",
    "build": "cross-env NODE_ENV=production node_modules/.bin/webpack -p",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "./src/test-setup.js"
    ],
    "collectCoverage": true,
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    }
  },
  "author": "Luciano Mammino",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^3.1.4",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
       "axios": "^0.15.3",
    "react-router": "^2.6.1",
      "request":"^2.81.0",
      "css-loader": "^0.26.2",
      "ignore-styles": "^5.0.1",
      "style-loader": "^0.13.2"
  },
  "devDependencies": {
       "axios-mock-adapter": "^1.9.0",
    "http-server": "^0.9.0",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1",
    "jest": "^20.0.4",
    "node-sass": "^3.4.2",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^3.2.0",
    "sinon": "^3.2.1",
    "enzyme":"^2.9.1",
    "chai": "^3.5.0",
      "chai-http": "^3.0.0"
  }
}
